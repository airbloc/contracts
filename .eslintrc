{
  "extends": [
      "airbnb-base",
      "plugin:node/recommended"
  ],
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "artifacts": false,
    "contract": false,
    "web3": false
  },
  "rules": {
    "strict": "off",
    "node/no-unpublished-require": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js", "*.spec.js"],
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}